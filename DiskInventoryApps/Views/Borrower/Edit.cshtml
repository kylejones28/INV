@model Borrower
@{
    string title = ViewBag.Action + " Borrower";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Lname"></label>
        <input asp-for="Lname" class="form-control" />
    </div>
    <div>
        <label asp-for="Fname"></label>
        <input asp-for="Fname" class="form-control" />
    </div>
    <div>
        <label asp-for="PhoneNum"></label>
        <input asp-for="PhoneNum" class="form-control" />
    </div>
    
                                                                                                       
    <input type="hidden" asp-for="BorrowerId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Borrower" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>