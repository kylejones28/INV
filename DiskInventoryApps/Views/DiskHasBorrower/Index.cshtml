@model List<DiskHasBorrower>
@{
    ViewBag.Title = "Checkin/ Checkout Manager";
}

<h2>@ViewBag.Title</h2>

<a asp-controller="DiskHasBorrower" asp-action="Add">Add New Checkout</a>
@if (TempData.Keys.Contains("message"))
            {
                <h4 class="bg-info text-center text-white p-2">
                    @TempData["message"]
                </h4>
            }

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Disk Name</th>
            <th>Borrower Last Name</th>
            <th>Borrower First Name</th>
            <th>Borrower Date</th>
            <th>Returned Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var diskhasborrower in Model)
        {
        <tr>
            <td>@diskhasborrower.Disk.DiskName</td>
            <td>@diskhasborrower.Borrower.Lname</td>
            <td>@diskhasborrower.Borrower.Fname</td>
            <td>@diskhasborrower.BorrowedDate?.ToString("dd MMM yyyy")</td>
            <td>@diskhasborrower.ReturnedDate?.ToString("dd MMM yyyy")</td>
           
            <td>
                <a asp-controller="DiskHasBorrower" asp-action="Edit" asp-route-id="@diskhasborrower.DiskHasBorrowerId">Edit</a>
                
            </td>
        </tr>
        }
    </tbody>
</table>
